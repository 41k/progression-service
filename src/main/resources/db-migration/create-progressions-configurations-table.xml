<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-progressions-configurations-table" author="author">
        <createTable tableName="configurations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="end_timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="update_timestamp" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="segmented_progressions_configuration" type="MEDIUMBLOB">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>